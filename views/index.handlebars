<div id="burgerHeading">
	<img src="/assets/img/burger.png" alt="Burger Img" style="width:300px" align="center">
<h1>Eat-Da-Burger!</h1>
</div>

<div id="burgersNotDevoured">
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <ul>
        {{this.burger_name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="button" class="btn">Devour It!</button>
        </form>
      </ul>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div id="burgersDevoured">
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <ul>
        {{this.burger_name}}
      </ul>
    {{/if}}
  {{/each}}
</ul>
</div>

<div id="addBurger">

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="button" class="btn">Submit</button>
</form>
<p>Enter a burger you want to eat and hit Submit</p>
</div>